                        <!-- btn-danger: 빨간색 버튼 -->
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">수정</button>
                        <button type="button" id="btnDelete" class="btn btn-danger">삭제</button>
                        <a href="/admin/list" class="btn btn-info">목록</a>
                    </div>

                    </div>
                </div>
            </form>


    <script>
        // 클라이언트(웹브라우저)에서 삭제버튼이 클릭되면 최종 삭제여부 확인 후 삭제 라우팅 메소드 호출
        $("#btnDelete").click(function(){

        if(confirm("삭제하시겠습니까?")){
            // 사용자가 확인버튼을 누르면 true가 반환되기 때문에
            // 확인 버튼 클릭 시 실행해야하는 기능 구현

            // location.href="사용자 웹브라우저를 특정 웹페이지 url로 이동"
            location.href="/admin/delete?aid=<%=admin.admin_member_id%>";
        }else{
            alert("삭제를 취소했습니다.");
        };
        })
    </script>


